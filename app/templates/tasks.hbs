<div class="row">
    <div class="col-md-8">
        <h1>Tasks</h1>
        {{#each model as |task|}}
            <div class="well">
                <h4>{{#link-to 'tasks.edit' task.id}}{{ task.title }}{{/link-to}}</h4>
                <small>Due: {{format-date task.date}}</small>
                <p>{{ task.description }}</p>
                <button {{action 'deleteTask' task.id}} class="btn btn-danger">Delete</button>
            </div>
        {{/each}}
    </div>
    <div class="col-md-4">
        {{ outlet }}
    </div>

    <button class="button" {{action 'setProp'}}>Add</button>
    <p>Property is {{foobar.property}}</p>
</div>