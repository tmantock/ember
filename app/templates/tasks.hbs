<div class="row">
    <div class="col-md-8">
    <h1>Tasks</h1>
    {{#each model as |task|}}
        <div class="well">
            <h4>{{ task.title }}</h4>
            <small>Due: {{task.date}}</small>
            <p>{{ task.description }}</p>
        </div>
    {{/each}}
    </div>
    <div class="col-md-4">
        {{ outlet }}
    </div>
</div>